<body ng-app="farmer" ng-controller="FarmerController">
  <div class="container-fluid nopadding">
    <% include ./partial/header %>
    <div class="container-fluid container-main">
      <div class="row row-margin">
        <div class="col-md-12">
          <div class="row">
