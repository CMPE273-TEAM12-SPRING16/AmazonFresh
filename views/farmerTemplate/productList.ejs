

<div class="thumbnail thumbnail-signup" >
            <h1>I am Selling</h1>

            <div class="thumbnail" ng-repeat="product in productLists ">
              <div class="row" >
              <div class="col-md-2">
                <div>
                  <img src="../uploads/{{product.filename}}"/>
                </div>
                <button type="button" class="btn btn-primary btn-xs btn-theme" data-toggle="modal" data-target=".bs-example-modal-lg" ng-click="editProduct(product)">Edit</button>
                <button type="button" class="btn btn-primary btn-xs btn-theme"  data-toggle="modal" data-target="#myModal" ng-click="setDeleteProduct(product)">Delete</button>
              </div>
              <div class="col-md-10">
                <h2 class="product-page-product-name">
                  {{product.PRODUCT_NAME}}
                </h2>
                <div class="product-page-ratings-img">
                  <img src="images/support_images/0-stars.png"/>
                  (0)
                </div>
                <div class="product-page-price">
                  <span class="price">${{product.PRICE}}</span>
                  <span class="unit-price">({{product.NOOFUNITS}}/{{product.UNIT}})</span>
                </div>
                <div class="row row-margin">
                  <div class="col-md-12">
                      <h3>Product Description</h3>
                      <p>{{product.PRODUCT_DESCRIPTION}}</p>
                  </div>
                </div>
              </div>
            </div>
            </div>

          </div>

<!-- Delete product Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
      <div class="row" >
         <div class="col-md-12"> 
          <input type="hidden" ng-model="productDelete"/>
          <span><center><h2>Are you sure you want to delete this product?</h2></center></span>
         </div>
      </div>
      </div>
      <div class="row" >
         <div class="col-md-12"> 
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
           <button type="button" class="btn btn-primary" ng-click="delete_product(productDelete)">Delete</button>
        </div>
       </div>
       <div class="row" >
         <div class="col-md-12"> 

         </div>
         </div>
      </div>
    </div>
  </div>